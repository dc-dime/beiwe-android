<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="org.beiwe.app.ui.ForgotPassword" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your new password is on the way!"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/instruction_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please press the button below to call a researcher to reset your password. Once you reset the password with the researcher, enter the new password below and click submit. This is your new password" />

            <View
                android:id="@+id/View01"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/call_researcher_button" />

            <View
                android:id="@+id/View02"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/firstPasswordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_activity_password" />

            <EditText
                android:id="@+id/forgot_password_enter_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/secondPasswordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_activity_password_verify" />

            <EditText
                android:id="@+id/forgot_password_enter_password_repeat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="registerNewPassword"
                android:text="@string/register_activity_submit" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>