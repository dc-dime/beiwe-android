<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.beiwe.app.ui.ResetPassword" >
        <requestFocus />

        <TextView
            android:id="@+id/welcoming_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+string/reset_password_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_password_enter_ID" />
        
        <EditText
            android:id="@+id/reset_password_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/enter_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_password_enter_password" />
        
        <EditText
            android:id="@+id/reset_password_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_password_repeat_password" />
        
        <EditText
            android:id="@+id/reset_password_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/forgot_password_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="fill_horizontal"
            android:onClick="resetPasswordSequence"
            android:text="@string/reset_password_submit" />

</LinearLayout>